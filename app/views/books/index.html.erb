<h1>Books</h1>

<th>Title</th>
<th>Body</th>

<% @books.each do |book| %>

<span><%=book.title %></span>
<span><%=book.body %></span>

<p><%= link_to"Show",book_path(book.id) %></p>
<p><%= link_to"Edit",edit_book_path(book.id) %></p>
<p><%= link_to"Destroy",book_path(book.id) %></p>

<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>